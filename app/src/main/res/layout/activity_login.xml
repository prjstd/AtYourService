<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/srvicon"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/opwhiteshape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/imageView1"
                android:src="@drawable/icon"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/view2"
            android:background="@drawable/opblackhape"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="@color/orange"
                android:ellipsize="start"
                android:ems="10"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:paddingRight="15dp"
                android:textAlignment="textStart"
                android:textDirection="rtl"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="start"
                android:textDirection="rtl"
                android:ems="10"
                android:textAlignment="textStart"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:drawableTint="@color/orange"
                android:layout_below="@id/email"
                android:background="@drawable/shape"
                android:textColorHint="#000000"
                android:layout_marginBottom="10dp"
                android:hint="كلمة السر"
                android:drawablePadding="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                tools:ignore="RtlCompat" />

            <!-- Login Button -->

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginTop="20dip"
                android:background="@drawable/shape2"
                android:fontFamily="serif"
                android:text="تسجيل الدخول"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:layout_below="@id/btn_login"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="انشاء حساب"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:background="@drawable/shape2"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp" />

                <Button
                    android:id="@+id/btn_reset_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:text="نسيت كلمة السر"
                    android:layout_gravity="center"
                    android:background="@drawable/shape2"
                    android:fontFamily="serif"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>