<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserServices.Activiteis.UserNCRCServiceActivity"
    android:layoutDirection="rtl"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tool"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/orange"
        android:layout_height="145dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="60dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/icon"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hhh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/main_menu_ncrc"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tool2"
        android:layout_below="@+id/tool"
        android:background="@color/orange"
        android:layout_height="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="25dp"
        android:id="@+id/card"
        android:layout_below="@+id/tool"
        android:layout_height="wrap_content"
        android:background="@drawable/oporangehape"
        android:elevation="5dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fullNameLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="الاسم: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/fullNameField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/emailLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/fullNameLay">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="الايميل: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nationalNumlLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_below="@id/emailLay">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="الرقم الوطني: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/nationalNumField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/serviceTypelLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/nationalNumlLay">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="الخدمة: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/serviceTypeField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/servicePricelLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_below="@id/serviceTypelLay">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="السعر: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/servicePriceField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/balancelLay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_below="@id/servicePricelLay">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content"
                    android:text="رصيدك: "
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center">
                </TextView>
                <EditText
                    android:id="@+id/balanceField"
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15dp"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:enabled="false"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnReguest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="طلب خدمة"
        android:textSize="24dp"
        android:textColor="#ffff"
        android:textStyle="bold"/>
</RelativeLayout>