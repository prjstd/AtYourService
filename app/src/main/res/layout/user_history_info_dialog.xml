<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boardershape">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@color/orange"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="تفاصيل الحملة"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_below="@+id/title"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:id="@+id/first"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_userpresent"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="الأسم"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="أسم صاحب الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/second"
                android:layout_below="@+id/first"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_phone_present"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="الهاتف"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="هاتف صاحب الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/third"
                android:layout_below="@+id/second"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_present"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="عنوان الحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="عنوان الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/forth"
                android:layout_below="@+id/third"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_disc_present"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="وصف الحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="وصف الحملة"
                    android:textSize="18dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/sixth"
                android:layout_below="@+id/forth"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_personnum_present"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="عدد الموجودين بالحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="عدد الموجودين بالحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/seventh"
                android:layout_below="@+id/sixth"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/star_date2"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="تاريخ بدء الحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="تاريخ بدء الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/eight"
                android:layout_below="@+id/seventh"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/end_date2"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="تاريخ إنتهاء الحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="تاريخ إنتهاء الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/nineth"
                android:layout_below="@+id/eight"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_status_present"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/shape"
                    android:text="نوع الحملة"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:background="@color/orange"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="نوع الحملة"
                    android:textSize="18dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/scroll"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/tenth"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


        <Button
            android:id="@+id/dialogButtonOk"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:text="حسنا"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:background="@drawable/shape2"
            android:layout_weight="1"/>



    </LinearLayout>



</RelativeLayout>